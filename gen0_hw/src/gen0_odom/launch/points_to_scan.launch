<launch>
  <group ns="front_lidar">
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan_ns1">
      <remap from="cloud_in" to="/front_lidar/cloud"/>
      <remap from="scan" to="/top_front_lidar/scan" />
      <rosparam>
        target_frame: top_lidar_front_link
        transform_tolerance: 0.01
        min_height: 0.0
        max_height: 1.0
        
        angle_min: -3.1415
        angle_max: 3.1415
        angle_increment: 0.0087
        scan_time: 0.3333
        range_min: 0.45
        range_max: 90
        use_inf: true
        
        #concurrency_level affects number of pc queued for processing and the number of threadsused
        # 0: Detect number of cores
        # 1: Single threaded
        # 2: inf : Parallelism level
        concurrency_level: 1
      </rosparam>
    </node>
  </group>

  <group ns="rear_lidar">
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan_ns2">
      <remap from="cloud_in" to="/rear_lidar/cloud"/>
      <remap from="scan" to="/top_rear_lidar/scan" />
      <rosparam>
        target_frame: top_lidar_rear_link
        transform_tolerance: 0.01
        min_height: 0.0
        max_height: 1.0
        
        angle_min: -3.1415
        angle_max: 3.1415
        angle_increment: 0.0087
        scan_time: 0.3333
        range_min: 0.45
        range_max: 90
        use_inf: true
        
        #concurrency_level affects number of pc queued for processing and the number of threadsused
        # 0: Detect number of cores
        # 1: Single threaded
        # 2: inf : Parallelism level
        concurrency_level: 1
      </rosparam>
    </node>
  </group>

</launch>