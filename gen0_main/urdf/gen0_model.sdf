            name="gz::sim::systems::AckermannSteering">
            <topic>/model/gen0_model/speed_cmd</topic>
            <odom_topic>ackodom</odom_topic>
            <left_joint>back_left_wheel_joint</left_joint>
            <right_joint>back_right_wheel_joint</right_joint>
